        <div class="sidebar-item">
          <a href="/country-sites" class="sidebar-link active" data-page="country-sites">
            <i class="fas fa-globe-americas sidebar-icon"></i>
            <span class="sidebar-text">Country Sites</span>
          </a>
        </div>
        <div class="sidebar-item">
          <a href="/admin/international/news" class="sidebar-link">
            <i class="fas fa-newspaper sidebar-icon"></i>
            <span class="sidebar-text">Manage News</span>
          </a>
        </div>
        <div class="sidebar-item">
          <a href="/admin#manage-partners" class="sidebar-link" data-page="manage-partners">
            <i class="fas fa-handshake sidebar-icon"></i>
            <span class="sidebar-text">Manage Partners</span>
          </a>
        </div>
