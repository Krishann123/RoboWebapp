          <div class="message success">
            <%= successMessage %>
          </div>
        <% } %>
        
        <% if (errorMessage && errorMessage.length > 0) { %>
          <div class="message error">
            <%= errorMessage %>
          </div>
        <% } %>
        
        <% if (countrySites && countrySites.length > 0) { %>
          <div class="table-responsive">
            <table class="sites-table">
              <thead>
                <tr>
                  <th>Flag</th>
                  <th>Name</th>
                  <th>URL Slug</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% countrySites.forEach(site => { %>
                  <tr>
                    <td>
                      <img src="<%= site.flagUrl || '/images/flags/placeholder.png' %>" alt="<%= site.name %> Flag" class="flag-image">
                    </td>
                    <td><%= site.name %></td>
                    <td><%= site.slug %></td>
                    <td>
                      <span class="status-badge status-active">Active</span>
                    </td>
                    <td>
                      <div class="action-buttons">
                        <a href="/country/<%= site.slug %>" class="action-btn view-btn" target="_blank">
                          <i class="fas fa-eye"></i> View
                        </a>
                        <a href="/country-sites/edit/<%= site._id %><%= locals.inDashboard ? '?dashboard=true' : '' %>" class="action-btn edit-btn">
                          <i class="fas fa-edit"></i> Edit
                        </a>
