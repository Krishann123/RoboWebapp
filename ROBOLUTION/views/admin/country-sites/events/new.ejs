<!-- EVENTS - NEW -->
<!DOCTYPE html>
<html>
<head><title>Add Event</title><link rel="stylesheet" href="/css/style.css"></head>
<body>
<div class="container">
    <h1>Add Event to <%= countrySite.name %></h1>
    <form action="/admin/country-sites/<%= countrySite._id %>/events" method="POST" enctype="multipart/form-data">
        <div class="form-group"><label>Title</label><input type="text" name="title" class="form-control" required></div>
        <div class="form-group"><label>Description</label><textarea name="description" class="form-control" rows="5"></textarea></div>
        <div class="form-group"><label>Date</label><input type="date" name="date" class="form-control"></div>
        <div class="form-group"><label>Location</label><input type="text" name="location" class="form-control"></div>
        <div class="form-group"><label>Banner Image</label><input type="file" name="bannerImage" class="form-control"></div>
        <div class="form-group"><label>Registration Link</label><input type="url" name="registrationLink" class="form-control"></div>
        <button type="submit" class="btn btn-primary">Add Event</button>
    </form>
</div>
</body>
</html> 