<!-- NEWS - EDIT -->
<!DOCTYPE html>
<html>
<head><title>Edit News</title><link rel="stylesheet" href="/css/style.css"></head>
<body>
<div class="container">
    <h1>Edit News Article in <%= countrySite.name %></h1>
    <form action="/admin/country-sites/<%= countrySite._id %>/news/<%= article._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group"><label>Title</label><input type="text" name="title" class="form-control" value="<%= article.title %>" required></div>
        <div class="form-group"><label>Content</label><textarea name="content" class="form-control" rows="10"><%= article.content %></textarea></div>
        <div class="form-group"><label>Image</label><input type="file" name="imageUrl" class="form-control">
        <% if (article.imageUrl) { %><img src="<%= article.imageUrl %>" width="200"><% } %></div>
        <button type="submit" class="btn btn-primary">Update Article</button>
    </form>
</div>
</body>
</html> 