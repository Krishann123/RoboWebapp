---
import Layout from '../../../layouts/Layout.astro';
const { countryData } = Astro.locals;
const { eventSlug } = Astro.params;
if (!countryData) { return Astro.redirect('/404'); }
const item = countryData.events.find(i => i.slug === eventSlug);
if (!item) { return Astro.redirect('/404'); }
---
<Layout title={`${item.title} - ${countryData.name}`}>
    <div class="container">
        <img src={item.bannerImage} alt={item.title}>
        <h1>{item.title}</h1>
        <p>{item.description}</p>
        <p><strong>Date:</strong> {new Date(item.date).toLocaleDateString()}</p>
        <p><strong>Location:</strong> {item.location}</p>
        <a href={item.registrationLink}>Register</a>
    </div>
</Layout> 